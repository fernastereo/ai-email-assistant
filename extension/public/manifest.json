{
  "manifest_version": 3,
  "name": "AI Email Assistant",
  "version": "1.0.0",
  "description": "AI Email Assistant. Sugiere respuestas, resume emails, mejora la redacci√≥n y detecta el tono de tus emails.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.live.com/*",
    "https://outlook.office.com/*",
    "https://ai-email-assistant.vercel.app/*"
  ],
  "background": {
    "service_worker": "static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*", 
        "https://outlook.live.com/*", 
        "https://outlook.office.com/*"
      ],
      "js": ["static/js/content-script.js"],
      "css": ["static/css/content-styles.css"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "AI Email Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": ["static/js/*", "static/css/*", "sidebar.html"],
      "matches": ["https://mail.google.com/*", "https://outlook.live.com/*"]
    }
  ]
}